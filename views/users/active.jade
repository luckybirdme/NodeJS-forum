extends ../layout

block content
		div.panel.panel-default
			div.panel-heading #{title}
			div.panel-body 
				form#activeForm.form-horizontal
					input(type="hidden" name="activeKey" value="#{activeKey}")
					div.form-group
						label.col-md-4.control-label Email
						div.col-md-3
							input(name="userEmail").form-control
							div#userEmailAlert.alert-required Email is not right
							div#userEmailSuccess.success-notice Email is not right
					div.form-group
						div.col-md-6.col-md-offset-4
							button(type="submit").btn.btn-primary Active
					div.form-group
						div.col-md-6.col-md-offset-4
							a(href="/users/login") Go to Login



